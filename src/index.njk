---
layout: layouts/base.njk
title: Home
---

<section class="hero">
  <div class="wrapper hero-grid">
    <div class="hero-copy">
      <h1>Come draw with us.</h1>
      <p class="lede">A queer figure drawing night with no pressure and no judgment. Bring a friend or make a new one here.</p>
      <div class="hero-actions">
        <a class="button" href="{{ nextEvent.rsvpUrl }}" target="_blank" rel="noreferrer">RSVP</a>
        <a class="button ghost" href="#get-updates">Get updates</a>
      </div>
    </div>
    <div class="hero-media">
      <img src="/assets/images/hero.jpeg" alt="Artists drawing together at Figure It Out." loading="eager" />
    </div>
  </div>
</section>

<section class="next-event" id="next-event">
  <div class="wrapper">
    <h2>Next event</h2>
    <div class="event-card">
      <h3 class="event-title">{{ nextEvent.title }}</h3>
      <div class="event-card-body">
        <div class="event-details">
          <p><strong>Date:</strong> {{ nextEvent.date }}</p>
          <p><strong>Time:</strong> {{ nextEvent.time }}</p>
          <p><strong>Location:</strong> {{ nextEvent.location }}</p>
          <p><strong>Cost:</strong> {{ nextEvent.cost }}</p>
          <div class="event-notes">
            {{ nextEvent.content | safe }}
          </div>
          <a class="button" href="{{ nextEvent.rsvpUrl }}" target="_blank" rel="noreferrer">RSVP / Sign up</a>
        </div>
        <div class="event-media">
          <img src="{{ nextEvent.image }}" alt="{{ nextEvent.imageAlt }}" loading="lazy" />
        </div>
      </div>
    </div>
  </div>
</section>
